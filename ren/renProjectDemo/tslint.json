{
    "extends": ["tslint:recommended", "tslint-microsoft-contrib/latest"],
    "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
    "linterOptions": {
        "exclude": [
            "src/contracts/ABIs/*.json",
            "src/contracts/bindings/*.ts",
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "interface-name": false,
        "jsx-boolean-value": false,
        "max-classes-per-file": false,
        "no-empty-interface": false,
        "no-var-requires": false,
        "object-literal-sort-keys": false,
        "no-implicit-dependencies": false,
        "space-before-function-paren": false,
        "arrow-parens": false,
        "jsx-wrap-multiline": false,
        "one-variable-per-declaration": false,
        "jsx-no-multiline-js": false,
        "import-name": false,
        "no-relative-imports": false,
        "no-null-keyword": false,
        "possible-timing-attack": false,
        "no-submodule-imports": false,
        "no-backbone-get-set-outside-model": false,
        "prefer-type-cast": false,
        "use-simple-attributes": false,
        "newline-before-return": false,
        "export-name": false,
        "binary-expression-operand-order": false,
        "strict-boolean-expressions": false,
        "newline-per-chained-call": false,
        "prefer-array-literal": false,
        "match-default-export-name": false,
        "function-name": false,
        "no-single-line-block-comment": false,
        "no-unnecessary-type-assertion": false,
        "no-suspicious-comment": false,
        "no-console": {
            "severity": "error",
            "options": ["log", "debug", "info"]
        },
        "strict-type-predicates": {
            "severity": "warning"
        },
        "ordered-imports": true,
        "no-object-literal-type-assertion": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "eofline": true,
        "no-non-null-assertion": true,
        "no-floating-promises": true,
        "typedef": true,
        "no-any": true,
        "no-angle-bracket-type-assertion": true,
        "no-void-expression": true,
        "no-use-before-declare": true,
        "promise-function-async": true,
        "prefer-readonly": true,
        "await-promise": true,
        "react-this-binding-issue": true,
        "no-string-based-set-timeout": true,
        "no-unnecessary-local-variable": false,
        "only-arrow-functions": true,
        "no-unused-variable": [
            true,
            {
                "ignore-pattern": "^_"
            }
        ],
        "quotemark": [true, "double", "jsx-double"],
        "indent": [true, "spaces", 4],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "allow-pascal-case"
        ],
        "no-import-side-effect": [
            true,
            {
                "ignore-module": "(\\.html|\\.css|\\.scss)$"
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": true,
                "esSpecCompliant": true
            }
        ],
        "increment-decrement": [true, "allow-post"],
        "align": [true, "parameters", "statements"],
        "array-type": [true, "array-simple"],
        "no-unsafe-any": false,
        "max-line-length": false,
        "max-func-body-length": false,
        "react-a11y-input-elements": false,
        "react-a11y-role-has-required-aria-props": false,
        "completed-docs": false
    }
}
